<?xml version="1.0"?>
<Container version="2">
  <Name>macreplayv2</Name>
  <Repository>macreplayv2:latest</Repository>
  <Registry></Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/T4s3rF4c3/macreplay_v2</Support>
  <Project>https://github.com/T4s3rF4c3/macreplay_v2</Project>
  <Overview>MacReplayV2 is an improved IPTV portal proxy that allows you to manage and stream IPTV channels with advanced features like enhanced channel editing, EPG support, MAC address rotation, smart fallback systems, and portal management. Perfect for integrating with Plex or M3U-based media software.</Overview>
  <Category>MediaApp:Video</Category>
  <WebUI>http://[IP]:[PORT:8001]</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/T4s3rF4c3/macreplay_v2/main/static/favicon.ico</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1699000000</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description>MacReplayV2 is an improved IPTV portal proxy that allows you to manage and stream IPTV channels with advanced features including enhanced channel editing, EPG support, MAC address rotation, and portal management.[br][br]
  [b]Key Features:[/b][br]
  • Advanced Channel Editor with DataTables interface[br]
  • Multiple IPTV Portal Management with MAC address rotation[br]
  • Smart Fallback System for stream reliability[br]
  • Intelligent Duplicate Detection and cleanup[br]
  • EPG (Electronic Program Guide) Support[br]
  • Multi-Level Filtering (Portal, Genre, Duplicates)[br]
  • Dashboard with Statistics and monitoring[br]
  • Autocomplete Fallback suggestions[br]
  • Compatible with Plex and M3U-based software[br][br]
  [b]Default Port:[/b] 8001[br]
  [b]Default User/Group:[/b] 99:100 (nobody:users)[br]
  [b]Web Interface:[/b] Modern Bootstrap-based UI with real-time updates
  </Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8001</HostPort>
        <ContainerPort>8001</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
  <HostDir>/mnt/user/appdata/macreplayv2/data</HostDir>
      <ContainerDir>/app/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
  <HostDir>/mnt/user/appdata/macreplayv2/logs</HostDir>
      <ContainerDir>/app/logs</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>99</Value>
      <Name>PUID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>100</Value>
      <Name>PGID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Europe/Berlin</Value>
      <Name>TZ</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>1</Value>
      <Name>PYTHONUNBUFFERED</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="WebUI Port" Target="8001" Default="8001" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="false">8001</Config>
  <Config Name="Data Directory" Target="/app/data" Default="/mnt/user/appdata/macreplayv2/data" Mode="rw" Description="Application data directory" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/macreplayv2/data</Config>
  <Config Name="Logs Directory" Target="/app/logs" Default="/mnt/user/appdata/macreplayv2/logs" Mode="rw" Description="Application logs directory" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/macreplayv2/logs</Config>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID (99 = nobody)" Type="Variable" Display="always" Required="true" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID (100 = users)" Type="Variable" Display="always" Required="true" Mask="false">100</Config>
  <Config Name="Timezone" Target="TZ" Default="Europe/Berlin" Mode="" Description="Timezone" Type="Variable" Display="always" Required="true" Mask="false">Europe/Berlin</Config>
  <Config Name="Python Unbuffered" Target="PYTHONUNBUFFERED" Default="1" Mode="" Description="Python unbuffered output" Type="Variable" Display="advanced" Required="false" Mask="false">1</Config>
</Container>