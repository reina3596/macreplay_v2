# Dockerfile für Unraid
FROM python:3.11-slim

# Build arguments für User/Group IDs
ARG PUID=99
ARG PGID=100

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    curl \
    gosu \
    && rm -rf /var/lib/apt/lists/*

# Create application directory
WORKDIR /app

# Create directories with proper permissions
RUN mkdir -p /app/data /app/logs

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY app-docker.py app.py
COPY stb.py .
COPY templates/ templates/
COPY static/ static/

# Create user with specified IDs (use existing group if available)
RUN if ! getent group ${PGID} >/dev/null; then groupadd -g ${PGID} macreplay; fi && \
    if ! getent passwd ${PUID} >/dev/null; then useradd -u ${PUID} -g ${PGID} -m -s /bin/bash macreplay; fi

# Set ownership of application directory
RUN chown -R ${PUID}:${PGID} /app

# Create entrypoint script for proper user handling
RUN echo '#!/bin/bash\n\
# Ensure proper ownership of mounted volumes\n\
chown -R ${PUID}:${PGID} /app/data /app/logs 2>/dev/null || true\n\
\n\
# Switch to the specified user and run the application\n\
exec gosu ${PUID}:${PGID} python app.py\n\
' > /entrypoint.sh && chmod +x /entrypoint.sh

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PUID=${PUID}
ENV PGID=${PGID}

# Use entrypoint script
ENTRYPOINT ["/entrypoint.sh"]